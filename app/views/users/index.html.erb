<h1>Alpha Bloggers</h1>

<%= will_paginate @users %>

<div>
    <% @users.each do |user| %>
      <div>
        <p><%= user.username %></p>
        <p><%= user.email %></p>
        <p><%= pluralize(user.articles.count, 'article') %></p>
        <%= button_to 'Profile Page', user_path(user.id), method: :get %>
        <%= button_to 'Edit Profile', edit_user_path(user.id), method: :get %>
      </div>
    <% end %>
</div>

<%= will_paginate @users %>
