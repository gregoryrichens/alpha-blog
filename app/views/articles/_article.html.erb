  <div>
    <% @articles.each do |article| %>
      <div>
        <% if article.user %>
          by <%= link_to "#{article.user.username}", user_path(article.user) %>
        <% end %>    
        <p>Title: <%= article.title %></p>
        <p><%= article.description %></p>
        <span><%= button_to 'Show', article_path(article.id), method: :get %></span>
        <span><%= button_to 'Edit', edit_article_path(article.id), method: :get %></span>
        <span><%= button_to 'Delete', article_path(article.id), method: :delete %></span>
      </div>
    <% end %>
  </div>
